        deleteMarker "farp1"; deleteMarker "farp2"; deleteMarker "farp3";
        {deleteVehicle _x} forEach _farp1_1; {deleteVehicle _x} forEach _farp1_2; {deleteVehicle _x} forEach _farp1_3;
